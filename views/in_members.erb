<link rel="stylesheet" href='/css/members.css'>

<div id="content">
	<% @members.each do |member| %>
		<div class="profile">
			<div class="profile_hero">
				<h2 class="profile_username"><a href="/members/<%= member.id %>"><%= member.username %></a></h2>
				<img class="profile_avatar" src="<%= member.img_url %>">
			</div>
			<div class="profile_forum">
				<ul class="profile_forum_data">
					<li>Member#: <%= member.id %></li>
					<li>Member Since: <%= member.join_date %></li>
					<li>Rank: <%= member.status %></li>
				</ul>
			</div>
			<div class="profile_real">
				<ul class="profile_real_data">
					<li>Name: <%= member.name %></li>
					<li>Email: <%= member.email %></li>
				</ul>
			</div>
		</div>
	<% end %>
</div>

<aside>
	<div id='aside_wrap'>
		<p id='login_status'>
			Logged in as: <%= currentuser_username %>
		</p>

		<form id="logout" method="POST" action="/logout">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Logout">
    </form>
		
		<h2 class='cta'>Display By:</h2>
		<form class='display_by' action='/topics/switch' method='POST'>
			<input type='submit' name='newest' value='NEWEST FIRST'><br>
			<input type='submit' name='oldest' value='OLDEST FIRST'><br>
			<input type='submit' name='active' value='MOST ACTIVE'>
		</form>
	</div>
