<aside>
	<div id='aside_wrap'>
		<% if logged_in? %>
			<p id='login_status'>
				Logged in as: <%= currentuser_username %>
			</p>
			<form method="POST" action="/logout">
      	<input type="hidden" name="_method" value="DELETE">
      	<input type="submit" value="Logout">
    	</form>
		<% else %>
			<p id='login_status'>
				You are not logged in
			</p>
		<% end %> 

		<p id='member_alert'><%= @message %></p>

